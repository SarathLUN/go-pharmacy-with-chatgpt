{{ template "header.gohtml" }}
{{ template "navbar.gohtml" .Active}}
<!-- hero-about-area start -->
<div class="banner-2">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="hero-about-text text-center">
                    <h2>Checkout</h2>
                    <h4><span>Home / </span><a href="#">Cart</a></h4>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- hero-about-area End -->

<!--blog-area-start-->
<div class="blog-area">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="add">
                    <h3>Selected Items</h3>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Item</th>
                        <th scope="col">Price</th>
                        <th scope="col">QTY</th>
                        <th scope="col">Total</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>1</td>
                        <td><img src="static/img/product/f1.png" class="img-thumbnail in-cart-img"></td>
                        <td>Otto</td>
                        <td>$ 0.20</td>
                        <td>3</td>
                        <td>$ 0.6</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td><img src="static/img/product/f2.png" class="img-thumbnail in-cart-img"></td>
                        <td>Polo</td>
                        <td>$ 0.20</td>
                        <td>3</td>
                        <td>$ 0.6</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td><img src="static/img/product/f3.png" class="img-thumbnail in-cart-img"></td>
                        <td>Amfetamin</td>
                        <td>$ 0.20</td>
                        <td>3</td>
                        <td>$ 0.6</td>
                    </tr>
                    </tbody>
                    <tfoot>
                    <tr>
                        <td colspan="5" class="text-right">
                            Grand Total
                        </td>
                        <td>
                            $ 1.80
                        </td>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="add">
                    <h3>Payment Options</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <ul class="list-group">
                    <li class="list-group-item"><span class="text-success"><i class="fa fa-check-circle"></i></span> Pay on Delivery</li>
                </ul>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="add">
                    <h3>Delivery To</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="input-group mb-3">
                    <!-- https://www.w3schools.com/html/tryit.asp?filename=tryhtml5_geolocation -->
                    <!-- https://www.coding.academy/blog/getting-a-users-location-longitude-and-latitude-using-jquery -->
                    <input type="text" class="form-control" placeholder="Your Location" aria-label="Your location" aria-describedby="location-basic-addon2" id="locationData">
                    <div class="input-group-append">
                        <span class="input-group-text" id="location-basic-addon2"> <i class="icofont-map-pins"></i> </span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Your Telegram Number" aria-label="Your Telegram" aria-describedby="telegram-basic-addon2" required>
                    <div class="input-group-append">
                        <span class="input-group-text" id="telegram-basic-addon2"> <i class="icofont-telegram"></i> </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm-12">
                <button class="btn btn-outline-primary" id="btn-submit-order">Submit Order <i class="icofont-telegram"></i> </button>
                <a href="shop.html" class="btn btn-outline-warning">Shop More <i class="icofont-cart"></i> </a>
            </div>
        </div>

    </div>
</div>
<!--blog-area-end-->



{{template "footer.gohtml"}}
